    .wrapper
      .header
        button#autorization.autorization Авторизоваться
      .main
        .main_break
        .main_photo
          img(src="/assets/img/ava141.jpg", class="ava", alt="фото")          

        .main_name Алексей Лапицкий
        .main_note Личный сайт веб разработчика
        nav.social
          ul.list
            for name,index in socials
              li(id="social_list-item_"+name, class="social_list-item")
                a(href=socials_links[index], alt="меню: "+name)
        nav.nav
          ul.list
            for name,index in navs
              li(id="nav_list-item_"+index, class="nav_list-item")
                a(href=navs_links[index], alt="меню: "+name)
