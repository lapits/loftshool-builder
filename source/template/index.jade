- var socials = ["vk", "git", "in"];
- var socials_links = ["/assets/img/vk.svg", "/assets/img/git.svg", "/assets/img/in.svg"];
- var navs = ["Мои работы", "Обо мне", "Блог"];
- var navs_links = ["index.html", "index.html", "index.html"];

doctype html
html
  include common/_head
  body
