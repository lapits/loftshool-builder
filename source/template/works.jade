    .wrapper.bg-up
      .header
        nav.top
          .top-left
            nav.social
              ul.social_list
                each val, index in socials
                  li(id="social_list-item_"+val, class="social_list-item")
                    if val=="vk"
                      a(href=socials_links[index],class="social_list-link")
                        img(class="nav_social_svg vk-icon", src=socials_img[index], alt="меню: "+val)
                    else
                      a(href=socials_links[index],class="social_list-link")
                        img(class="nav_social_svg", src=socials_img[index], alt="меню: "+val)


          .top-right
            nav.hamburger
              a(href="#",class="hamburger_link")
                img(class="hamburger_img", src="assets/img/icons/hamburger.svg", alt="вызов подменю")
                       
      .main
        .main_break
        .main_photo
          img(src="assets/img/ava141.jpg", class="ava", alt="фото")

        .main_name Алексей Лапицкий
        .main_note Личный сайт веб разработчика

      .nav-poligons
        .nav-poligons_left
          .pic-poligons
            svg(viewBox="0 0 900 175",preserveAspectRatio="none")
              polygon(points="0,0  0,175  900,175  900,155",fill="#f8f9f5")
        .nav-poligons_right
          .pic-poligons
            svg(viewBox="0 0 900 175",preserveAspectRatio="none")
              polygon(points="0,155  0,175  900,175  900,0",fill="#f8f9f5")
        .nav-arrow-down
          a(href="index.html")
            svg(class="nav-arrow-down_svg", viewBox="0 0 27 17")
              polyline(points="3,2  13,12  25,2" fill="none" stroke="rgba(255, 255, 255, 0.70)" stroke-width="6")


      .main-works
        .main-works_head_wrapper
          h1.main-h-big.icon_bg_works МОИ РАБОТЫ
          svg.main-delim
            line.line-delimiter(x1="0",y1="0",x2="89",y2="0") 
        .main-works_examples
          .main-works_examples-left
            .main-works_examples-left_header
            .main-works_examples-left_delim
            .main-works_examples-left_tech
            .main-works_examples-left_button
          .main-works_examples-right
            .main-works_examples-right_view
            .main-works_examples-right_up-down
        .main-works_about
          .main-works_opinion
            h1.main-h-big.icon_bg_about.main-works_opinion_h ЧТО ОБО МНЕ ГОВОРЯТ
            svg.main-delim
              line.line-delimiter(x1="0",y1="0",x2="89",y2="0") 
            .main-works_opinion_left
              .main-works_opinion_photo
              .main-works_opinion_text
              .main-works_opinion_person

            .main-works_opinion_right
              .main-works_opinion_photo
              .main-works_opinion_text
              .main-works_opinion_person


          .main-works_feedback
            .main-works_feedback_head СВЯЗАТЬСЯ СО МНОЙ
            .main-works_feedback_delim
            .main-works_feedback_name
            .main-works_feedback_email
            .main-works_feedback_msg
            .main-works_feedback_buttons
              .main-works_feedback_left-btn ОТПРАВИТЬ
              .main-works_feedback_right-btn ОЧИСТИТЬ


