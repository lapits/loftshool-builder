doctype html
html
  include common/_head
  body
    <!--[if lt IE 7]>
    <p class="browsehappy">Вы используете <strong>устаревший</strong> браузер. Пожалуйста <a href="http://browsehappy.com/">обновите его</a></p>
    <![endif]-->

    .wrapper.bg-up
      .header
        nav.top
          .top-left
            nav.social
              ul.social_list
                each val, index in socials
                  li(id="social_list-item_"+val, class="social_list-item")
                    if val=="vk"
                      a(href=socials_links[index],class="social_list-link")
                        img(class="nav_social_svg vk-icon", src=socials_img[index], alt="меню: "+val)
                    else
                      a(href=socials_links[index],class="social_list-link")
                        img(class="nav_social_svg", src=socials_img[index], alt="меню: "+val)


          .top-right
            nav.hamburger
              a(href="#",class="hamburger_link")
                img(class="hamburger_img", src="assets/img/icons/hamburger.svg", alt="вызов подменю")
                       
      .main
        .main_break
        .main_photo
          img(src="assets/img/ava141.jpg", class="ava", alt="фото")

        .main_name Алексей Лапицкий
        .main_note Личный сайт веб разработчика

      .nav-poligons
        .nav-poligons_left
          .pic-poligons
            svg(viewBox="0 0 900 175",preserveAspectRatio="none")
              polygon(points="0,0  0,175  900,175  900,155",fill="#ebefe2")
        .nav-poligons_right
          .pic-poligons
            svg(viewBox="0 0 900 175",preserveAspectRatio="none")
              polygon(points="0,155  0,175  900,175  900,0",fill="#f3f4ee")
        .nav-arrow-down
          a(href="index.html")
            svg(class="nav-arrow-down_svg", viewBox="0 0 27px 17px")
              polyline(points="3,2  13,12  25,2" fill="none" stroke="rgba(255, 255, 255, 0.70)" stroke-width="6")


      .main-works
        .works-wrapper
          .main-works_wrapper_head
            .main-works_head_wrapper
              h1.main-h-big МОИ РАБОТЫ
            svg.main-delim
              line.line-delimiter(x1="0",y1="0",x2="89",y2="0") 


      //- .footer-nav 

    .footer.footer-colored
      .footer_copyrights Алексей Лапицкий
      .footer_comments создано с любовью в LoftSchool 2016

  script(src="assets/js/maps.js")
